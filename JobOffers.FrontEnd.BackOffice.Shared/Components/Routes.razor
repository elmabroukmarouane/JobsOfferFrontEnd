<Router AppAssembly="@typeof(Routes).Assembly" AdditionalAssemblies="new [] {typeof(Layout.MainLayout).Assembly}">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Layout.NotFoundLayout)">
            <NotFound />
        </LayoutView>
    </NotFound>
</Router>
